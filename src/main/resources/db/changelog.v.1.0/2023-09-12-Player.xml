<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="6" author="admin">
        <createTable tableName="players">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)" nullable="false"/>
            <column name="surname" type="varchar(255)" nullable="false"/>
            <column name="age" type="int"/>
            <column name="position" type="varchar(255)"/>
            <column name="player_statistics" type="bigint"/>
            <column name="player_contracts" type="bigint"/>
            <column name="rating" type="int"/>
            <column name="football_clubs" type="bigint"/>
        </createTable>
    </changeSet>
</databaseChangeLog>