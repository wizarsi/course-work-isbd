<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="4" author="admin">

        <createTable tableName="football_clubs">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)" nullable="false" unique="true"/>
            <column name="coach" type="bigint"/>
            <column name="players_count" type="int" nullable="false"/>
            <column name="budget" type="int" nullable="false"/>
            <column name="currency" type="varchar(255)"/>
            <column name="won_matches" type="int" nullable="false"/>
            <column name="sport_director" type="bigint"/>
        </createTable>
    </changeSet>
</databaseChangeLog>