<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet id="8" author="admin">
        <createTable tableName="player_statistics">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="won_matches" type="int" nullable="false"/>
            <column name="count_matches" type="int" nullable="false"/>
            <column name="count_trophies" type="int" nullable="false"/>
            <column name="count_assists" type="int" nullable="false"/>
            <column name="count_goals" type="int" nullable="false"/>
            <column name="red_cards" type="int" nullable="false"/>
        </createTable>
    </changeSet>

</databaseChangeLog>